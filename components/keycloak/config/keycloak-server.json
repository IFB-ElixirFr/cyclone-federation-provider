{
    "providers": [
        "classpath:${jboss.home.dir}/providers/*"
    ],

    "admin": {
        "realm": "master"
    },

    "eventsStore": {
        "provider": "mongo",
        "jpa": {
            "exclude-events": [ "REFRESH_TOKEN" ]
        }
    },

    "realm": {
        "provider": "mongo"
    },

    "user": {
        "provider": "mongo"
    },

	"userCache": {
		"default" : {
			"enabled": false
		}
	},

    "userSessionPersister": {
        "provider": "mongo"
    },

    "timer": {
        "provider": "basic"
    },

    "theme": {
        "default": "cyclone",
        "welcomeTheme": "cyclone",
        "staticMaxAge": 2592000,
        "cacheTemplates": true,
        "cacheThemes": true,
        "folder": {
          "dir": "${jboss.home.dir}/themes"
        }
    },

    "scheduled": {
        "interval": 900
    },

    "connectionsHttpClient": {
        "default": {}
    },

    "connectionsJpa": {
        "default": {
            "dataSource": "java:jboss/datasources/KeycloakDS",
            "databaseSchema": "update"
        }
    },

	"realmCache": {
		"provider": "default",
		"default": {
			"enabled": true
		}
	},

    "connectionsInfinispan": {
        "default" : {
            "cacheContainer" : "java:comp/env/infinispan/Keycloak"
        }
    },

    "connectionsMongo": {
        "default": {
            "host": "keycloakdb",
            "port": "27017",
            "db": "keycloak",
            "connectionsPerHost": 100,
            "databaseSchema": "update"
        }
    }

}
